{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Rewards Apis",
      "description": "documentation for rewards apis"
    },
    "host": "localhost:3000",
  
    "tags": [
      {
        "name": "Rewards",
        "description": "rewards apis"
      }
    ],
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
      "/rewards":{
        "parameters":[
            {
                "name":"auth",
                "in":"header",
                "description":"token authorization",
                "required":true,
                "type":"string"
            }
        ],
          "get":{
              "tags":[
                  "Rewards"
              ],
              "description":"get all rewards",
              "summary":"all rewards",
              "parameters":[
                  {
                      "name":"pageNo",
                      "in":"query",
                      "description":"page no"
                  },
                  {
                      "name":"sort",
                      "in":"query",
                      "description":"sort by name id and date"
                  }
              ],
              "responses":{
                  "200":{
                      "description":"OK",
                      "schema":{
                          "$ref":"#/definitions/Rewards"
                      }
                  }
              }
          }
  
      },
      "/rewards/create":{
        "parameters":[
            {
                "name":"auth",
                "in":"header",
                "description":"token authorization",
                "required":true,
                "type":"string"
            }
        ],
          "post":{
              "tags":[
                  "Rewards"
              ],
              "description":"create a new reward",
              "summary":"create a new reward",
              "parameters":[
                  {
                      "name":"reward data",
                      "in":"body",
                      "description":"reward that we want to create",
                      "schema":{
                          "$ref":"#/definitions/Reward"
                      }
                  }
              ],
              "produces":[
                  "application/json",
                  "application/xml"
              ],
              "responses":{
                  "201":{
                      "description":"new reward is created",
                      "content":{
                          "application/json":{
                      "schema":{
                          "$ref":"#/definitions/Reward"
                      }
                    }
                }
                  },
                  "401":{
                      "description":"some fields are missing"
                  }
              }
          }
  
      },
      "/rewards/{id}/edit":{
          "parameters":[
              {
                "name":"auth",
                "in":"header",
                "description":"token authorization",
                "required":true,
                "type":"string"
            },
              {
                  "name":"id",
                  "in":"path",
                  "required":true,
                  "description":"reward id which we want to update",
                  "type":"string"
              }
          ],
          "put":{
              "tags":[
                  "Rewards"
              ],
              "summary":"update/edit reward by id",
              "parameters":[
                  {
                      "name":"update reward",
                      "in":"body",
                      "description":"updated reward value",
                      "schema":{
                          "$ref":"#/definitions/Reward"
                      }
                  }
              ],
              "responses":{
                  "202":{
                      "description":"reward updated"
                  },
                  "404":{
                      "description":"rewards not found"
                  }
                  
              }
          }
          
      },
      "/rewards/{id}/launch":{
          "parameters":[
              {
                "name":"auth",
                "in":"header",
                "description":"token authorization",
                "required":true,
                "type":"string"
            },
              {
                "name":"id",
                "in":"path",
                "required":true,
                "description":"reward which we want to find",
                "type":"string"
            }
          ],
          "put":{
              "tags":[
                  "Rewards"
              ],
              "summary":"launch reward",
              "responses":{
                  "202":{
                      "description":"reward status changed to launch"
                  },
                  "200":{
                      "description":"reward already in launched"
                  },
                  "404":{
                      "description":"rewards not found"
                  }
              }
          }
      },
      "/rewards/{id}":{
          "parameters":[
              {
                  "name":"auth",
                  "in":"header",
                  "description":"token authorization",
                  "required":true,
                  "type":"string"
              },
              {
                  "name":"id",
                  "in":"path",
                  "required":true,
                  "description":"reward which we want to find",
                  "type":"string"
              }
          ],
          "get":{
              "tags":[
                  "Rewards"
              ],
              "summary":"get rewards by id",
              "responses":{
                  "200":{
                      "description":"reward found",
                      "schema":{
                          "$ref":"#/definitions/Reward"
                      }
                  },
                  "404":{
                      "description":"rewards not found"
                  }
              }
          },
          "delete":{
              "tags":[
                  "Rewards"
              ],
              "summary":"delete rewards by id",
              "responses":{
                  "200":{
                      "description":"reward deleted"
                  },
                  "404":{
                      "description":"rewards not found"
                  }
              }
          }
      },
      "/signup":{
        "post":{
            "tags":[
                "User"
            ],
            "description":"create a user",
            "summary":"create a new user",
            "parameters":[
                {
                    "name":"user data",
                    "in":"body",
                    "description":"user that we want to create",
                    "schema":{
                        "$ref":"#/definitions/User"
                    }
                }
            ],
            "produces":[
                "application/json",
                "application/xml"
            ],
            "responses":{
                "201":{
                    "description":"new user is created",
                    "content":{
                        "application/json":{
                    "schema":{
                        "$ref":"#/definitions/User"
                    }
                  }
              }
                },
                "401":{
                    "description":"some fields are missing"
                }
            }
        }
    },
    "/login":{
        "post":{
            "tags":[
                "User"
            ],
            "description":"Login a user",
            "summary":"Login user",
            "parameters":[
                {
                    "name":"user data",
                    "in":"body",
                    "description":"user that we want to login",
                    "schema":{
                        "$ref":"#/definitions/User"
                    }
                }
            ],
            "produces":[
                "application/json",
                "application/xml"
            ],
            "responses":{
                "201":{
                    "description":"Login successful",
                    "content":{
                        "application/json":{
                    "schema":{
                        "$ref":"#/definitions/User"
                    }
                  }
              }
                },
                "401":{
                    "description":"Login failed"
                }
            }
        }
      }
    },
    "definitions": {
      "Reward": {
        "type": "object",
          "required": [
              "reward_name",
              "reward_display_name",
              "reward_type",
              "reward_sender",
              "recepients",
              "receiver_message",
              "announcement_type",
              "slack_channel",
              "channel_message"
          ],
      "properties":{
          "_id":{
              "type":"string",
              "uniqueItems": "true"
          },
          "reward_name":{
              "type": "string"
          },
          "reward_display_name":{
              "type": "string"
          },
          "reward_type":{
              "type": "string"
          },
          "reward_sender":{
            "type": "array",
            "enum": [
                "Manager","Leadership"
            ]
        },
        "recepients":{
            "type": "array",
            "enum": [
                "Manager","Empolyee","Selected"
            ]
        },
          "receiver_message":{
              "type": "string"
          },
          "announcement_type":{
              "type": "string"
          },
          "slack_channel":{
              "type": "string"
          },
          "channel_message":{
              "type": "string"
          },
          "status": {
            "type":"string",
            "enum": [
                "Draft","Launch","Stop"
            ]
        },
          "createdAt":{
              "type": "string"
          },
          "updatedAt":{
              "type": "string"
          },
          "employee_id":{
            "type":"integer"
        }
      }
    },
    "Rewards": {
        "type": "array",
        "$ref": "#/definitions/Reward"
    },
    "User": {
        "type": "object",
        "required": [
            "email",
            "password"
        ],
        "properties":{
          "email":{
              "type": "string"
          },
          "password":{
              "type":"string"
          },
          "role":{
               "type": "string"
          },
          "token":{
              "type": "string"
          }
        }
    }

}
}